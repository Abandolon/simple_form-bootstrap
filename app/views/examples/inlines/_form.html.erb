<%= simple_form_for @user, url: examples_inline_path,
  wrapper: :inline_form,
  html: { class: "form-inline" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
  <%= f.input :email, input_html: { class: "mr-sm-2" } %>

  <%= f.input :password, input_html: { class: "mr-sm-2" } %>

  <%= f.input :terms %>

  <%= f.button :submit, class: "btn-primary mx-sm-2" %>
<% end %>
