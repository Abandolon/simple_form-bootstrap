<%= simple_form_for @user, url: examples_inline_path,
  wrapper: :inline_form,
  html: { class: "form-inline" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
  <%= f.error_notification %>

  <%= f.label :email, class: "sr-only" %>
  <%= f.input_field :email, class: "form-control mb-2 mr-sm-2" %>

  <%= f.label :password, class: "sr-only" %>
  <%= f.input_field :password, class: "form-control mb-2 mr-sm-2" %>

  <%= f.input :terms %>

  <%= f.button :submit, class: "btn-primary mb-2 mr-sm-2" %>
<% end %>
