<form class="form-inline">
  <label class="sr-only" for="inline-email">Email address</label>
  <input type="text" class="form-control mb-2 mr-sm-2" id="inline-email" placeholder="Enter email">

  <label class="sr-only" for="inline-password">Password</label>
  <input type="password" class="form-control" id="inline-password" placeholder="Password">

  <div class="form-check mb-2 mr-sm-2">
    <input class="form-check-input" type="checkbox" id="inline-check">
    <label class="form-check-label" for="inline-check">
      Remember me
    </label>
  </div>

  <button type="submit" class="btn btn-primary">Create User</button>
</form>
